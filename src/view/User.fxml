<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="profileVBox" alignment="CENTER" prefHeight="754.0" prefWidth="878.0" styleClass="secondary-color" stylesheets="@../css/profile.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserController">
   <children>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label prefHeight="96.0" prefWidth="882.0" text="Profile Settings">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox prefHeight="219.0" prefWidth="880.0">
         <children>
            <Label prefHeight="26.0" prefWidth="773.0" text="Profile details">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="150.0" text="Name">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <Label fx:id="staffName" styleClass="label_info">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox fx:id="btn" alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="150.0" text="Date of Birth">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <Label fx:id="dob" styleClass="label_info">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="150.0" text="Address">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <Label fx:id="address" styleClass="label_info">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="150.0" text="Position">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <Label fx:id="position" styleClass="label_info">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="219.0" prefWidth="880.0">
         <children>
            <Label prefHeight="16.0" prefWidth="775.0" text="Contact info">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="150.0" text="Phone">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="phone" prefHeight="20.0" prefWidth="350.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="26.0" prefWidth="150.0" text="Email">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="email" prefHeight="20.0" prefWidth="350.0" />
               </children>
            </HBox>
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
         <children>
            <Button fx:id="accountSettingButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="155.0" styleClass="button1" stylesheets="@../css/profile.css" text="Account setting" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <Button fx:id="saveButton" mnemonicParsing="false" prefHeight="50.0" prefWidth="155.0" styleClass="button1" stylesheets="@../css/profile.css" text="Save Changes" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="50.0" />
   </padding>
</VBox>
